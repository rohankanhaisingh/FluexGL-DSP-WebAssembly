{
    "name": "fluexgl-dsp-webassembly",
    "version": "1.0.0",
    "description": "Rust source code which will be compiled into WASM, made for FluexGL-DSP.",
    "main": "index.js",
    "directories": {
        "lib": "lib"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "sh:web-assembly:build": "cd scripts && ./build-wasm.sh",
        "sh:web-assembly:watch": "cd scripts && ./watch-wasm.sh",
        "sh:webpack:run": "npx webpack --config webpack.config.js",
        "sh:webpack:build": "cd scripts && ./build-webpack-config.sh && cd ../",
        "wasm-build-ps": "powershell ./scripts/powershell/BuildWasm.ps1",
        "wasm-watch-ps": "powershell ./scripts/powershell/WatchWasm.ps1",
        "webpack-build-ps": "powershell ./scripts/powershell/BuildWebpackConfig.ps1",
        "webpack-run-ps": "npx webpack --config webpack.config.js",
        "webpack-watch-ps": "npx webpack --config webpack.config.js --watch",
        "worklets-watch-ps": "tsx ./scripts/watch-worklets-dev.ts",
        "dev": "concurrently -n WEB,RUST -c \"npm:watch:wasm\"",
        "wasm:rel": "sh -c 'cd lib/wasm && wasm-pack build --release --target web --out-dir ../_dist/wasm --out-name fluexgl-dsp-wasm'",
        "wasm:opt": "sh -c 'wasm-opt -Oz -o lib/_dist/wasm/fluexgl-dsp-wasm.wasm lib/_dist/wasm/fluexgl-dsp-wasm.wasm'",
        "build": "npm run wasm:rel && npm run wasm:opt"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rohankanhaisingh/FluexGL-DSP-WebAssembly.git"
    },
    "author": "Rohan Kanhaisingh",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rohankanhaisingh/FluexGL-DSP-WebAssembly/issues"
    },
    "homepage": "https://github.com/rohankanhaisingh/FluexGL-DSP-WebAssembly#readme",
    "dependencies": {
        "@types/colors": "^1.1.3",
        "@types/glob": "^8.1.0",
        "@types/node": "^24.10.0",
        "@typescript-eslint/eslint-plugin": "^8.46.3",
        "@typescript-eslint/parser": "^8.46.3",
        "colors": "^1.4.0",
        "eslint": "^9.39.1",
        "glob": "^11.0.3",
        "html-minimizer-webpack-plugin": "^5.0.3",
        "terser-webpack-plugin": "^5.3.14",
        "text-decoder": "^1.2.3",
        "text-decoding": "^1.0.0"
    },
    "devDependencies": {
        "ts-loader": "^9.5.4",
        "typescript": "^5.9.3",
        "webpack": "^5.102.1",
        "webpack-cli": "^6.0.1"
    }
}
